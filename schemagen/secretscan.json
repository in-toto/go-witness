{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/in-toto/go-witness/attestation/secretscan/attestor",
  "$ref": "#/$defs/Attestor",
  "$defs": {
    "Attestor": {
      "properties": {
        "findings": {
          "items": {
            "$ref": "#/$defs/Finding"
          },
          "type": "array"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "findings"
      ]
    },
    "Finding": {
      "properties": {
        "ruleId": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "severity": {
          "type": "string"
        },
        "file": {
          "type": "string"
        },
        "startLine": {
          "type": "integer"
        },
        "secret": {
          "type": "string"
        },
        "match": {
          "type": "string"
        },
        "entropy": {
          "type": "number"
        },
        "source": {
          "type": "string"
        },
        "truncatedKey": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "ruleId",
        "description",
        "severity",
        "file",
        "startLine",
        "source",
        "truncatedKey"
      ]
    }
  }
}